<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/info_dialog"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorPrimary"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proprietaire :"
            android:layout_marginTop="50dp"
            android:textSize="40dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:fontFamily="centry"
            android:layout_marginBottom="50dp"


            />


    </LinearLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:columnCount="2"
        android:rowCount="3"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Nom Proprietaire :"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/nom_pro"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/black"



            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Type controle :"
            android:textStyle="bold"


            />

        <TextView
            android:id="@+id/type_cont"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/black"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Defaut a verifier :"
            android:textStyle="bold"


            />

        <TextView
            android:id="@+id/defaut_vec"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/black"


            />


    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_gravity="right"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/cancel_btn"
            android:text="Cancel"
            android:onClick="cancel_btn"

            />

        <Button
            android:id="@+id/next_btn"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/spin_background2"
            android:text="NEXT"
            android:textColor="@android:color/white"
            android:onClick="next_btn"

            />
    </LinearLayout>

</LinearLayout>